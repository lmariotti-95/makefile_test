{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C program",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${workspaceFolder}/main.c",
        "${workspaceFolder}/*.c",
        "${workspaceFolder}/user/src/*.c",
        "-o",
        "${workspaceFolder}/main.out"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task for building C program"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/*.c",
        "${workspaceFolder}/user/src/*.c",
        "-I",
        "${workspaceFolder}/user/lib/",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}